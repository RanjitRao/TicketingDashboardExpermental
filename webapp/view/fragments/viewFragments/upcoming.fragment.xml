<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz.data="sap.viz.ui5.data"
    xmlns:cm="sap.suite.ui.commons">
    <cm:ChartContainer
        showFullScreen="true"
        showZoom="false"
        showLegendButton="false"
        title="Last 7 days break Up">
        <cm:content>
            <cm:ChartContainerContent
                icon="sap-icon://line-chart"
                title="Line Chart">
                <cm:content>
                    <viz:VizFrame uiConfig="{applicationSet:'fiori'}"
                    height='{applicationModel>/ChartContentHeight}' width="100%" vizType='stacked_column'
                    vizProperties="{ChartLookModel>/Linear}">
                    <viz:dataset>
                        <viz.data:FlattenedDataset
                            data="{manifests>/stackedColumn/sap.card/content/data/json/list}">
                            <viz.data:dimensions>
                                <viz.data:DimensionDefinition
                                    name="Category"
                                    value="{manifests>Category}" />
                            </viz.data:dimensions>
                            <viz.data:measures>
                                <viz.data:MeasureDefinition name="High"
                                    value="{manifests>High}" />
                                <viz.data:MeasureDefinition
                                    name="Medium"
                                    value="{manifests>Medium}" />
                                <viz.data:MeasureDefinition name="Low"
                                    value="{manifests>Low}" />
                            </viz.data:measures>
                        </viz.data:FlattenedDataset>
                    </viz:dataset>
                    <viz:feeds>
                        <viz.feeds:FeedItem uid="valueAxis" type="Measure"
                            values="High" />
                        <viz.feeds:FeedItem uid="valueAxis"
                            type="Measure" values="Medium" />
                        <viz.feeds:FeedItem uid="valueAxis" type="Measure"
                            values="Low" />
                        <viz.feeds:FeedItem uid="categoryAxis"
                            type="Dimension"
                            values="Category" />
                    </viz:feeds>
                </viz:VizFrame>
                    <!-- <Table
                        items="{AlertDataModel>/results}">
                        <columns>
                            <Column
                                width="10em">
                                <Text text="Incident" />
                            </Column>
                            <Column
                                minScreenWidth="Tablet"
                                demandPopin="true">
